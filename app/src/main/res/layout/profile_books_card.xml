<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/ProCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/deneme_renk"
            >
            <ImageView
                android:id="@+id/ProbookImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/ProbookName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ProbookImage"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/Proauthor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ProbookImage"
                android:layout_below="@+id/ProbookName"
                android:layout_marginLeft="10dp"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/Procategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ProbookImage"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/Proauthor"
                android:textSize="15sp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
